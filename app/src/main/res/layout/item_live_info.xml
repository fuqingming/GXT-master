<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_backgrount_color"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/twelve"
            android:textColor="@color/dark"
            android:text="主讲人："/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="沈志华"
            android:textColor="@color/dark"
            android:textSize="@dimen/twelve" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:background="@mipmap/shadow"
            android:orientation="horizontal"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="86dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/eee"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignLeft="@+id/fdsa"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/fdsa"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/white_color"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="39dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09:00"
                            android:textColor="@color/red"
                            android:textSize="@dimen/sixteen" />

                        <TextView
                            android:id="@+id/tv_time_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="7dp"
                            android:text="早盘点晴"
                            android:textColor="@color/red"
                            android:textSize="@dimen/fourteen" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="9dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="接替永吉股份上位题材切换运用…"
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:background="@mipmap/live_live" />
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="86dp">
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/gxt_icon"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>