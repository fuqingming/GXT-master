<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_backgrount_color" >

    <include
        android:id="@+id/rl_title"
        layout="@layout/common_title" />
    <!-- ViewPagerIndicator -->
    <com.jgcj.library.view.ViewPagerIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:orientation="horizontal"
        app:tab_line_color="@color/red"
        app:tab_line_height="2"
        app:tab_text_highlight_color="@color/red"
        app:tab_text_normal_color="@color/black"
        app:tab_text_size="14"
        app:tab_visible_count="2" />

    <!-- ViewPager -->
    <com.jgcj.library.view.NoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color" />
</LinearLayout>